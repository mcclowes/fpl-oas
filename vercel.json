{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/openapi.yaml",
      "headers": [
        { "key": "Content-Type", "value": "application/yaml" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ]
}
